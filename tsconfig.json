{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2016",
		"lib": [
			"es2016"
		],
		"noImplicitAny": false,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./dist",
		"types": [
			"node"
		],
		"typeRoots": [
			"./typings"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"./src/**/*"
	]
}